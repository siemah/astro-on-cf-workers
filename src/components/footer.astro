---
export interface Props {
  storeName?: string;
}

const { storeName = "zenghouf" } = Astro.props;
---

<footer class="bg-[#212020] text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {/* Desktop Footer Layout */}
    <div class="hidden md:block">
      {/* Logo */}
      <div class="text-center mb-8">
        <a href="/" class="text-xl font-normal">
          {storeName}
        </a>
      </div>

      {/* Footer Links - Horizontal layout for desktop */}
      <div class="flex flex-wrap justify-center gap-8 mb-8">
        <a
          href="#"
          class="text-sm hover:text-gray-300 transition-colors"
        >
          الدعم
        </a>
        <a
          href="/track-order"
          class="text-sm hover:text-gray-300 transition-colors"
        >
          تتبع الطلب
        </a>
        <a
          href="#"
          class="text-sm hover:text-gray-300 transition-colors"
        >
          اتصل بنا
        </a>
        <a
          href="#"
          class="text-sm hover:text-gray-300 transition-colors"
        >
          سياسة الاسترداد
        </a>
      </div>

      {/* Powered by */}
      <div class="text-center mb-8">
        <div
          class="flex items-center justify-center space-x-2 text-sm text-gray-400"
          dir="ltr"
        >
          <a
            href="https://www.zzenz.com/"
            class="flex items-center space-x-2 hover:opacity-80 transition-opacity"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>Powered by</span>
            <img
              src="/favicon.svg"
              alt="Zzenz Logo"
              width={20}
              height={20}
              class="object-contain"
            />
            <span
              class="font-semibold bg-gradient-to-r from-[#c1fd0d] to-[#1c4045] bg-clip-text text-transparent"
              >Zzenz</span
            >
          </a>
        </div>
      </div>

      {/* Divider */}
      <div class="border-t border-gray-700 mb-6"></div>

      {/* Bottom Section - Currency and Links */}
      <div class="flex items-center justify-between">
        {/* Currency Selector */}
        <!-- <div class="flex items-center space-x-2">
          <img
            src="/placeholder.svg?height=20&width=30"
            alt="علم الولايات المتحدة"
            width={30}
            height={20}
            class="rounded-sm"
          />
          <span class="text-sm font-medium"> USD </span>
        </div> -->

        {/* Bottom Links */}
        <div class="flex space-x-8 text-sm">
          <a
            href="#"
            class="hover:text-gray-300 transition-colors"
          >
            سياسة الخصوصية
          </a>
          <a
            href="#"
            class="hover:text-gray-300 transition-colors"
          >
            شروط الاستخدام
          </a>
        </div>
      </div>
    </div>

    {/* Mobile Footer Layout */}
    <div class="md:hidden">
      {/* Logo */}
      <div class="text-center mb-8">
        <a href="#" class="text-xl font-normal">
          {storeName}
        </a>
      </div>

      {/* Footer Links - Vertical layout for mobile */}
      <div class="space-y-6 text-center">
        <a
          href="#"
          class="block text-base hover:text-gray-300 transition-colors"
        >
          الدعم
        </a>
        <a
          href="/track-order"
          class="block text-base hover:text-gray-300 transition-colors"
        >
          تتبع الطلب
        </a>
        <a
          href="#"
          class="block text-base hover:text-gray-300 transition-colors"
        >
          اتصل بنا
        </a>
        <a
          href="#"
          class="block text-base hover:text-gray-300 transition-colors"
        >
          سياسة الاسترداد
        </a>
      </div>

      {/* Powered by */}
      <div class="text-center mt-8 mb-6">
        <div
          class="flex items-center justify-center space-x-2 text-sm text-gray-400"
        >
          <span>Powered by</span>
          <a
            href="https://www.zzenz.com/"
            class="flex items-center space-x-2 hover:opacity-80 transition-opacity"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src="/favicon.svg"
              alt="Zzenz Logo"
              width={20}
              height={20}
              class="object-contain"
            />
            <span
              class="font-semibold bg-gradient-to-r from-[#c1fd0d] to-[#1c4045] bg-clip-text text-transparent"
              >Zzenz</span
            >
          </a>
        </div>
      </div>

      {/* Divider */}
      <div class="border-t border-gray-700 my-6"></div>

      {/* Currency and Bottom Links */}
      <div class="space-y-4">
        {/* Currency Selector */}
        <!-- <div
          class="flex items-center justify-center space-x-2"
        >
          <img
            src="/placeholder.svg?height=20&width=30"
            alt="علم الولايات المتحدة"
            width={30}
            height={20}
            class="rounded-sm"
          />
          <span class="text-base font-medium"> USD </span>
        </div> -->

        {/* Bottom Links */}
        <div class="flex justify-center space-x-8 text-sm">
          <a
            href="#"
            class="hover:text-gray-300 transition-colors"
          >
            سياسة الخصوصية
          </a>
          <a
            href="#"
            class="hover:text-gray-300 transition-colors"
          >
            شروط الاستخدام
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
